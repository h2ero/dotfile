"""自定义js{{{
"js <<EOF
"function beta(arg){
"    var v=arg;
"    var url=window.top.getBrowser().selectedBrowser.contentWindow.location.href;
"    url=url.replace(/http:\/\//g,'').split('/')[0];
"    pattern=/.*beta.*/;
"    if(pattern.test(url)){
"       urls=url.split('.');
"       urls[0]='beta'+arg;
"       betaurl=urls.join('.');
"    }else{
"        betaurl='beta'+arg+'.'+url;
"    }
"    betaurl=betaurl;
"    window.gBrowser.loadURI(betaurl);
"    }
"EOF
"
"nmap -c -e e js beta(<count>)

"""}}}
