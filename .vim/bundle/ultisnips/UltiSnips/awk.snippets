snippet awks
#!/usr/bin/awk 
BEGIN {
	${1:begin statement}
}
{
	${2:statement}
}
END {
	${3:end statement}
}
endsnippet

snippet if
if ($${1} ~ /${2:regex}/) {
	${3}
}${4}
endsnippet

snippet ife
if ($${1} ~ /${2:regex}/) {
	${3}
} else {
	${4}
}${5}
endsnippet

snippet while
while (${1:condition}) {
	${2:statement}
}
endsnippet

snippet for
for (${1:i} = 0; $1 <= ${2:end}; $1++) {
	${3:statement}
}
endsnippet
